<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="colorAccent">#FF264A</color>
    <color name="colorBlack">#000000</color>
    <color name="colorBlack2">#333333</color>
    <color name="colorBlack3">#666666</color>
    <color name="colorLight">#FEF3F7</color>
    <color name="colorLine">#e2e2e2</color>
    <color name="colorPrimary">#FF264A</color>
    <color name="colorPrimaryDark">#e22d3e</color>
    <color name="colorWhite">@android:color/white</color>
    <string name="app_name">hlj_android_ui_component</string>
    <style name="HljAccentTagAppearance" parent="HljNormalTagAppearance">
        <item name="android:contentDescription">强调小标签</item>
        <item name="android:background">@drawable/module_ui_component_sp_r2_stroke_accent</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>
    <style name="HljNormalTagAppearance">
        <item name="android:contentDescription">normal小标签</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:background">@drawable/module_ui_component_sp_r2_f5f5f5</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/colorBlack3</item>
        <item name="android:textSize">11sp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>
    <style name="HljSecondaryTagAppearance" parent="HljNormalTagAppearance">
        <item name="android:contentDescription">次级小标签</item>
        <item name="android:background">@drawable/module_ui_component_sp_r2_light</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="HljSecondaryTagDisableAppearance" parent="HljNormalTagAppearance">
        <item name="android:contentDescription">次级disable小标签</item>
    </style>
</resources>